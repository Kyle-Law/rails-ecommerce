<!-- lib/templates/erb/scaffold/_form.html.erb.tt -->

<%= form_with(model: promotion) do |form| %>
  <%= render "error_messages", resource: form.object %>

  <div class="form-group">

    <%= form.label :name, class: "label" %>
    <%= form.text_field :name, class: "form-control" %>

  </div>

  <div class="form-group">

    <%= form.label :message, class: "label" %>
    <%= form.text_field :message, class: "form-control" %>

  </div>

  <div class="form-group">

    <%= form.label :min, class: "label" %>
    <%= form.number_field :min, class: "form-control" %>

  </div>

  <div class="form-group">

    <%= form.label :mixable, class: "label" %>
    <%= form.check_box :mixable, class: "form-control" %>

  </div>

  <div class="form-group">

    <%= form.label :discount_fixed, class: "label" %>
    <%= form.text_field :discount_fixed, class: "form-control" %>

  </div>

  <div class="form-group">

    <%= form.label :discount_percent, class: "label" %>
    <%= form.text_field :discount_percent, class: "form-control" %>

  </div>

  <div class="form-group">

    <%= form.label :gift, class: "label" %>
    <%= form.text_field :gift, class: "form-control" %>

  </div>

  <div class="form-group">

    <%= form.label :gift_quantity, class: "label" %>
    <%= form.number_field :gift_quantity, class: "form-control" %>

  </div>

  <div class="form-group">

    <%= form.label :date_start, class: "label" %>
    <%= form.date_select :date_start, class: "form-control" %>

  </div>

  <div class="form-group">

    <%= form.label :date_end, class: "label" %>
    <%= form.date_select :date_end, class: "form-control" %>

  </div>

  <div class="form-group">

    <%= form.label :voucher_code, class: "label" %>
    <%= form.text_field :voucher_code, class: "form-control" %>

  </div>

  <div class="form-group">
    <%= form.button class: "btn btn-primary" %>

    <% if form.object.persisted? %>
      <%= link_to 'Delete', form.object, class: "btn btn-primary", method: :delete, data: { remote: true, confirm: "Are you sure?" } %>
    <% end %>
  </div>
<% end %>
