<!-- lib/templates/erb/scaffold/_form.html.erb.tt -->

<%= form_with(model: item) do |form| %>

  <div class="form-group">

    <%= form.label :name, class: "label" %>
    <%= form.text_field :name, class: "form-control" %>

  </div>

  <div class="form-group">

    <%= form.label :price, class: "label" %>
    <%= form.text_field :price, class: "form-control" %>

  </div>

  <div class="form-group">

    <%= form.label :quantity, class: "label" %>
    <%= form.number_field :quantity, class: "form-control" %>

  </div>

  <div class="form-group">

    <%= form.label :description, class: "label" %>
    <%= form.text_area :description, class: "form-control" %>

  </div>

  <div class="form-group">

    <%= form.label :photo_url, class: "label" %>
    <%= form.text_field :photo_url, class: "form-control" %>

  </div>

  <div class="form-group">

    <%= form.label :brand_id, class: "label" %>
    <%= form.text_field :brand_id, class: "form-control" %>

  </div>

  <div class="form-group">

    <%= form.label :category_id, class: "label" %>
    <%= form.text_field :category_id, class: "form-control" %>

  </div>

  <div class="form-group">
    <%= form.button class: "btn btn-primary" %>

    <% if form.object.persisted? %>
      <%= link_to 'Delete', form.object, class: "btn btn-primary", method: :delete, data: { remote: true, confirm: "Are you sure?" } %>
    <% end %>
  </div>
<% end %>
