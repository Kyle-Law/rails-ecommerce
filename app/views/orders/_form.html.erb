<!-- lib/templates/erb/scaffold/_form.html.erb.tt -->

<%= form_with(model: order) do |form| %>
  <%= render "error_messages", resource: form.object %>

  <div class="form-group">

    <%= form.label :user_id, class: "label" %>
    <%= form.text_field :user_id, class: "form-control" %>

  </div>

  <div class="form-group">

    <%= form.label :total_price, class: "label" %>
    <%= form.text_field :total_price, class: "form-control" %>

  </div>

  <div class="form-group">

    <%= form.label :status, class: "label" %>
    <%= form.text_field :status, class: "form-control" %>

  </div>

  <div class="form-group">

    <%= form.label :credit, class: "label" %>
    <%= form.text_field :credit, class: "form-control" %>

  </div>

  <div class="form-group">

    <%= form.label :remarks, class: "label" %>
    <%= form.text_area :remarks, class: "form-control" %>

  </div>

  <div class="form-group">

    <%= form.label :shipping_address, class: "label" %>
    <%= form.text_area :shipping_address, class: "form-control" %>

  </div>

  <div class="form-group">

    <%= form.label :notification_phone_number, class: "label" %>
    <%= form.text_field :notification_phone_number, class: "form-control" %>

  </div>

  <div class="form-group">

    <%= form.label :voucher_code, class: "label" %>
    <%= form.text_field :voucher_code, class: "form-control" %>

  </div>

  <div class="form-group">

    <%= form.label :delivery_mode_id, class: "label" %>
    <%= form.text_field :delivery_mode_id, class: "form-control" %>

  </div>

  <div class="form-group">
    <%= form.button class: "btn btn-primary" %>

    <% if form.object.persisted? %>
      <%= link_to 'Delete', form.object, class: "btn btn-primary", method: :delete, data: { remote: true, confirm: "Are you sure?" } %>
    <% end %>
  </div>
<% end %>
