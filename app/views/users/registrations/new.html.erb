<div class="container">
<div class="mx-custom-wide">
  <h1>Sign up</h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
      <% resource.errors.messages[:email].each do |error|%>
        <p class="text-red">Email <%= error %></p>
      <%end %>
    </div>
    <div class="form-group">
      <%= f.label :phone %><i>(eg. 60123456789)</i><br />
      <%= f.text_field :phone, class: 'form-control' %>
      <% if resource.errors.messages[:phone][0]%>
        <p class="text-red">Phone <%= resource.errors.messages[:phone][0] %></p>
      <%end %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      <% if @minimum_password_length %>
        <small class="form-text text-muted">(<%= @minimum_password_length %> characters minimum)</small >
      <% end %>
      <% if resource.errors.messages[:password][0] %>
        <p class="text-red">Password <%= resource.errors.messages[:password][0] %></p>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      <% resource.errors.messages[:password_confirmation].each do |error|%>
        <p class="text-red">Password Confirmation <%= error %></p>
      <%end %>
    </div>
    <div class="actions">
      <%= f.submit "Sign up", class: 'btn btn-primary btn-block btn-lg' %>
    </div>
  <% end %>
  <%= render "users/shared/links" %>
</div>
</div>
